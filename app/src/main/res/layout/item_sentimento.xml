<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtSentimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sentimento"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txtFator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cenario"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txtMarcante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marcante"
        android:textSize="14sp"
        android:textColor="#d32f2f"/>

    <TextView
        android:id="@+id/txtObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obs:"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txtDataHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#888888"/>

</LinearLayout>
